{
  "manifest_version": 3,
  "name": "Skip It",
  "version": "1.0.0",
  "description": "Skip it",
  "permissions": [],
  "background": {
    "service_worker": "./background/index.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.netflix.com/watch/*",
        "http://www.netflix.com/watch/*"
      ],
      "run_at": "document_end",
      "js": ["content/netflix/index.js", "content/netflix/utils/notify.js"],
      "css": ["content/netflix/style/style.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [],
      "resources": []
    }
  ],
  "action": {
    "default_title": "Skip it",
    "default_popup": "./popup/index.html"
  }
}
